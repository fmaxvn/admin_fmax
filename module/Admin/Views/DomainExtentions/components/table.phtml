            },
            {
                field: 'name',
                headerName: 'Tên domain mở rộng',
                minWidth: 300,
                filter: 'agTextColumnFilter',
                cellClass: 'd-flex align-items-center',
                cellRenderer: (params) =>
                    `<a class="text-decoration-none text-dark" href="/admin/domain-extentions/edit/id/${params.data.id}">${params.value}</a>`
            },
            {
                field: 'price',
                headerName: 'Giá',
                minWidth: 200,
                filter: 'agNumberColumnFilter',
                cellClass: 'd-flex align-items-center',
            },
            {
                field: 'price_km',
                headerName: 'Giá khuyến mãi',
                minWidth: 200,
                filter: 'agNumberColumnFilter',
                cellClass: 'd-flex align-items-center',
            },
            {
                field: 'percent',
                headerName: 'Phần trăm giảm',
                minWidth: 200,
                filter: 'agNumberColumnFilter',
                cellClass: 'd-flex align-items-center',
            },
            {
                field: 'priority',
                headerName: 'Ưu tiên',
                minWidth: 110,
                filter: false,
                cellClass: 'd-flex align-items-center justify-content-center',
                cellRenderer: (params) => {
                    const isChecked = params.value == 1 ? 'checked' : '';
                    return `
                            <div class="form-check form-switch">
                                <input class="form-check-input" style="cursor: pointer; box-shadow: none;" type="checkbox" role="switch" 
                                id="switch-${params.data.id}" ${isChecked} onclick="toggleShowView(${params.data.id}, this)">
                            </div>
                        `;
                }
            },
            {
                field: '',
                headerName: 'Hành động',
                filter: false,
                cellClass: 'd-flex align-items-center justify-content-center',
