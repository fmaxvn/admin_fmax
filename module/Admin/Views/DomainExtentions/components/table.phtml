                cellRenderer: (params) => {
                    return `<a class="text-decoration-none text-dark" href="/admin/domain-extentions/edit/id/${params.data.id}"><i class="ph-bold ph-pen fs-5"></i></a>`;
                }

            },
        ],
        defaultColDef: {
            flex: 1,
            filter: true,
            floatingFilter: true,
            sortable: true,
            resizable: true
        },
        paginationPageSize: 20,
        pagination: true,
        rowData: <?php echo json_encode($domainEx) ?>,
    };

    document.addEventListener('DOMContentLoaded', function() {
        var gridDiv = document.querySelector('#myGrid');
        new agGrid.Grid(gridDiv, gridOptions);
    });


    function toggleShowView(id, element) {
        const newStatus = element.checked ? 1 : 0;
        const confirmMessage = newStatus ? "Bạn có chắc chắn muốn hiển thị tiện ích này?" : "Bạn có chắc chắn muốn ẩn tiện ích này?";

        // ✅ Hiển thị hộp thoại xác nhận trước khi gửi request
        if (!confirm(confirmMessage)) {
            element.checked = !element.checked; // Hoàn tác nếu chọn "Hủy"
            return;
        }

        fetch("/admin/apps-market/toggleStatus", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    id: id,
                    showview: newStatus
                })
            })
            .then(response => response.json())
            .then(data => {
                if (!data.success) {
                    alert("Có lỗi xảy ra khi cập nhật trạng thái.");
                    element.checked = !element.checked; // Hoàn tác nếu lỗi
                }
            })
            .catch(error => {
                console.error("Lỗi:", error);
                alert("Có lỗi xảy ra.");
                element.checked = !element.checked; // Hoàn tác nếu lỗi
            });
    }
</script>